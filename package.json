{
    "name": "to2do-api",
    "version": "1.0.0",
    "description": "backend for todo app",
    "main": "app.js",
    "scripts": {
        "prestart": "npm run -s build",
        "start": "node dist/server_production.js",
        "predev": "npm run -s build",
        "dev": "nodemon dist/server_production.js",
        "clean": "rimraf dist",
        "build": "npm run clean && mkdir -p dist && npm run rollup",
        "rollup": "./node_modules/.bin/rollup -c",
        "test": "jest",
        "apidoc": "apidoc -i src/ && apidoc-markdown2 -p doc/ -o README.md",
        "precommit": "yarn apidoc"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/ThomasAndrewMacLean/To2Do-api.git"
    },
    "author": "Thomas MacLean",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/ThomasAndrewMacLean/To2Do-api/issues"
    },
    "homepage": "https://github.com/ThomasAndrewMacLean/To2Do-api#readme",
    "dependencies": {
        "babel-core": "^6.26.3",
        "babel-plugin-external-helpers": "^6.22.0",
        "babel-preset-es2015-rollup": "^3.0.0",
        "babelrc-rollup": "^3.0.0",
        "bcrypt": "^2.0.1",
        "body-parser": "^1.18.3",
        "cookie-parser": "^1.4.3",
        "cors": "^2.8.4",
        "crypto": "^1.0.1",
        "ejs": "^2.6.1",
        "express": "^4.16.3",
        "google-auth-library": "^1.6.1",
        "joi": "^13.4.0",
        "jsonwebtoken": "^8.3.0",
        "monk": "^6.0.6",
        "node-fetch": "^2.1.2",
        "rimraf": "^2.6.2",
        "rollup": "^0.62.0",
        "rollup-plugin-babel": "^3.0.7",
        "volleyball": "^1.5.1"
    },
    "devDependencies": {
        "apidoc": "^0.17.6",
        "apidoc-markdown2": "^0.3.7",
        "babel-cli": "^6.26.0",
        "babel-jest": "^23.4.0",
        "babel-preset-env": "^1.7.0",
        "babel-preset-es2015": "^6.24.1",
        "babel-preset-stage-2": "^6.24.1",
        "babel-register": "^6.26.0",
        "bson-objectid": "^1.1.5",
        "eslint": "^5.0.1",
        "eslint-plugin-jest": "^21.17.0",
        "husky": "^0.14.3",
        "jest": "^23.4.1",
        "jsonfile": "^2.4.0",
        "lodash": "^4.17.4",
        "nodemon": "^1.17.5",
        "q": "^1.4.1",
        "sinon": "^6.1.3",
        "superagent": "^3.8.3",
        "supertest": "^3.1.0"
    },
    "apidoc": {
        "title": "Custom apiDoc browser title",
        "url": "https://api.github.com/v1"
    },
    "jest": {
        "rootDir": "src",
        "verbose": false,
        "moduleDirectories": [
            "node_modules"
        ],
        "transform": {
            "^.+\\.js$": "babel-jest"
        }
    }
}